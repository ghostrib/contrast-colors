{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Language and Environment */
    "target": "ES2015",
    "lib": ["ESNext", "DOM"],
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "composite": false,
    "rootDir": "./src",

    /* Modules */
    "module": "ES2015",
    "moduleResolution": "classic",

    /* Emit */
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "./dist/lib",
    // "declarationDir": "./dist/lib",
    "removeComments": false,

    /* Interop Constraints */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "skipLibCheck": true
  },
  "files": [
    "./src/color-names.ts",
    "./src/color-parsers.ts",
    "./src/color.ts",
    "./src/convert.ts",
    "./src/hex-new.ts",
    "./src/hsl-new.ts",
    "./src/index.ts",
    "./src/rgb-new.ts",
    "./src/interfaces.ts",
    "./src/theme.ts",
    "./src/utils.ts"
  ]
}
