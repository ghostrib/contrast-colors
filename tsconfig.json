{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Language and Environment */
    "target": "ES2015",
    "lib": ["ESNext", "DOM"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Modules */
    "module": "ES2015",
    "moduleResolution": "classic",

    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/lib",
    "declarationDir": "./dist/types",

    /* Interop Constraints */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "skipLibCheck": true
  },
  "files": [
    "./src/color-names.ts",
    "./src/color.ts",
    "./src/convert.ts",
    "./src/hex-new.ts",
    "./src/hsl-new.ts",
    "./src/index.ts",
    "./src/interfaces.ts",
    "./src/rgb-new.ts",
    "./src/color-parsers.ts"
  ]
}
