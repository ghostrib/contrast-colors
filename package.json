{
  "name": "color-tools",
  "version": "1.0.0",
  "description": "a set of utilities for working with color spaces",
  "main": "lib/index.js",
  "type": "module",
  "exports": {
    ".": {
      "default": "./lib/index.js",
      "import": "./lib/index.js",
      "node": null,
      "require": null
    }
  },
  "scripts": {
    "test": "mocha ./tests/*",
    "test:rgb": "mocha ./tests/rgb.test.js",
    "test:hex": "mocha ./tests/hex.test.js",
    "test:hsl": "mocha ./tests/hsl.test.js",
    "test:hsv": "mocha ./tests/hsv.test.js",
    "test:convert": "mocha ./tests/convert.test.js",
    "test:color": "mocha ./tests/color.test.js",
    "lint": "eslint .",
    "prepare": "husky install",
    "tsc:init": "yarn tsc --init"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattbrannon/color-tools.git"
  },
  "keywords": [
    "color",
    "css",
    "rgb",
    "hsl",
    "hex",
    "contrast"
  ],
  "author": "Matt Brannon",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mattbrannon/color-tools/issues"
  },
  "homepage": "https://github.com/mattbrannon/color-tools#readme",
  "devDependencies": {
    "@typescript-eslint/parser": "^5.30.6",
    "chai": "^4.3.4",
    "eslint": "^8.19.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "mocha": "^9.1.3",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
